<% layout("/layouts/boilerplate") %>
<h1 class="col-6 offset-3">Signup on WanderLust</h1>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3"> 
                    <label for="username" class="form-label">UserName</label>
                    <input name="username" type="text" id="username" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">UserName needs!</div>
                </div>
                <div class="mb-3"> 
                    <label for="email" class="form-label">Email</label>
                    <input name="email" type="text" id="email" class="form-control" required>
                    <!-- <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">UserName needs!</div> -->
                </div>
                <div class="mb-3"> 
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" id="password" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Password needs!</div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>